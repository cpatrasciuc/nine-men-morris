// Uses the Examples/Aureola material from Ogre Samples as starting point.

material MillHalo
{
  technique
  {
    pass
    {
      lighting off
      scene_blend alpha_blend
      depth_write off
      diffuse vertexcolour
      cull_hardware none

      texture_unit
      {
        texture mill_halo.png
        tex_address_mode clamp
      }
    }
  }
}